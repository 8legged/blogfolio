<% provide(:title, 'Home') %>
<div row>
  <div class="small-11 small-centered column">
    <h2>Listing posts</h2>
    <% if current_user %>
    <%= link_to 'New Post', new_post_path %>
    <% end %>
    <table>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <% if current_user %>
          <td>[<%= link_to 'Show', post %>]</td>
          <td>[<%= link_to 'Edit', edit_post_path(post) %>]</td>
          <td>[<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>]</td>
          <% end %>
        </tr>
        <hr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
